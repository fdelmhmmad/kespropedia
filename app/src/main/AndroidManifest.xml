<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kespropedia">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_app"
        android:roundIcon="@drawable/logo_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:label="KesproPedia">

        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Kuis1Fragment"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".GameWon"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".PlayAgain"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".Time_Up"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".TriviaQuestion"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".PostTest"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".PreTest"
            android:theme="@style/AppTheme.NoActionBar"></activity>

    </application>

</manifest>