<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="25dp"
    android:background="@drawable/bg_skor">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bt_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:adjustViewBounds="true"
        android:longClickable="false"
        android:src="@drawable/ic_home"
        app:backgroundTint="#FFFFFF"
        app:maxImageSize="24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_fourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="330dp"
        android:layout_marginBottom="25dp"
        android:adjustViewBounds="true"
        android:longClickable="false"
        android:rotation="180"
        android:src="@drawable/arrow1"
        app:backgroundTint="#FFFFFF"
        app:maxImageSize="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/gill_sans_ultra_bold_condensed_ms"
        android:gravity="center_horizontal"
        android:text='Nilai (Kriteria)'
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/comic_sans_ms"
        android:gravity="center_horizontal"
        android:text='Benar: '
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/comic_sans_ms"
        android:gravity="center_horizontal"
        android:text='Salah: '
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/comic_sans_ms"
        android:gravity="center_horizontal"
        android:text='Menu'
        android:textColor="#000000"
        android:textSize="34sp"  android:visibility="gone"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_mitos"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="450dp"
        android:fontFamily="@font/comic_sans_ms"
        android:text="Lihat Jawaban"
        android:textAlignment="center" />
</RelativeLayout>