    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bt_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:adjustViewBounds="true"
        android:longClickable="false"
        android:rotation="180"
        android:src="@drawable/arrow1"
        app:backgroundTint="#FFFFFF"
        app:maxImageSize="24dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/gill_sans_ultra_bold_condensed_ms"
        android:gravity="center_horizontal"
        android:text='Materi'
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/comic_sans_ms"
        android:gravity="center_horizontal"
        android:text='Menu'
        android:textColor="#000000"
        android:textSize="34sp"  android:visibility="gone"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_anatomi"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/mat1"
        android:text="Anatomi Dan Fisiologi Organ Genitalia"
        android:fontFamily="@font/comic_sans_ms" />

    <Button
        android:id="@+id/bt_pubertas"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:background="@drawable/mat2"
        android:hapticFeedbackEnabled="false"
        android:text="Pubertas"
        android:fontFamily="@font/comic_sans_ms"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/bt_menstruasi"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/mat3"
        android:text="Menstruasi"
        android:fontFamily="@font/comic_sans_ms"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/bt_infeksi"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:background="@drawable/mat4"
        android:text="INFEKSI MENULAR SEKSUAL"
        android:fontFamily="@font/comic_sans_ms" />

    <Button
        android:id="@+id/bt_pranikah"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="475dp"
        android:background="@drawable/mat5"
        android:text="SEKS PRANIKAH"
        android:fontFamily="@font/comic_sans_ms"/>

    <Button
        android:id="@+id/bt_hamil"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mat6"
        android:fontFamily="@font/comic_sans_ms"
        android:layout_marginTop="550dp"
        android:text="KEHAMILAN TIDAK DIINGINKAN"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/bt_aborsi"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="625dp"
        android:background="@color/green"
        android:fontFamily="@font/comic_sans_ms"
        android:text="ABORSI"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/bt_hygiene"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_marginTop="325dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mat7"
        android:fontFamily="@font/comic_sans_ms"
        android:shadowColor="#000000"
        android:text="Personal hygiene (kebersihan diri)" />

</RelativeLayout>